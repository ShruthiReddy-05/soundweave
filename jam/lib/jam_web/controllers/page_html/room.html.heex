<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Live Jamming App - Room</title>
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #f8f8f8;
            color: #333;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .container {
            width: 90%;
            max-width: 900px; /* Increased the max-width */
            background: white;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            padding: 20px;
            text-align: center;
        }

        .video-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            width: 100%;
            margin-top: 20px;
        }

        .video {
            flex: 1;
            max-width: 48%;
            background-color: #000;
            height: 400px; /* Increased height */
            border-radius: 8px;
            overflow: hidden;
            display: flex;
            justify-content: center;
            align-items: center;
            color: white;
        }

        .video.others {
            background-color: #222;
        }

        #error-message {
            color: red;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <div class="container" id="room-page">
        <div class="video-container">
            <div class="video" id="user-video">
                <video id="local-video" autoplay muted playsinline style="width: 100%; height: 100%;"></video>
            </div>
            <div class="video others" id="others-video">
                <p>Others' Video</p>
            </div>
        </div>
        <div id="error-message"></div>
    </div>

    <!-- WebRTC and Socket JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/phoenix@1.7.0/priv/static/phoenix.js"></script>
    <script>
        const roomCode = "<%= @room_code %>";  // This will inject the room code dynamically from the controller
        const socket = new Phoenix.Socket("/socket", { params: { token: window.userToken } });
        socket.connect();

        const channel = socket.channel(`room:${roomCode}`, {});
        channel.join()
            .receive("ok", resp => console.log("Joined room successfully", resp))
            .receive("error", resp => console.log("Unable to join room", resp));

        const userVideoElement = document.getElementById("local-video");
        const errorMessageElement = document.getElementById("error-message");

        // Function to handle permissions and media
        function requestMediaPermissions() {
            navigator.mediaDevices.getUserMedia({ video: true, audio: true })
                .then(stream => {
                    // Attach the stream to the video element
                    userVideoElement.srcObject = stream;

                    // Further WebRTC handling can go here (e.g., sending tracks to peers)
                    console.log("Media stream obtained.");
                })
                .catch(err => {
                    console.error("Error accessing user media:", err);
                    errorMessageElement.innerHTML = "Unable to access your camera and microphone. Please check your permissions.";
                    alert("Unable to access your camera and microphone. Please check your permissions.");
                });
        }

        // Request media permissions when the page loads
        requestMediaPermissions();
    </script>
    
</body>
</html>
